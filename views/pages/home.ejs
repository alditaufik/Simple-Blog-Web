<%- include("../partials/header") %>
<title>my Blog</title>
<div class="container">
    <div class="hero text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">Welcome to my Blog, <%= user.firstName +" "+ user.lastName %> !.</h1>
        <div class="hero_btn d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a class="btn btn-primary btn-lg" href="create" role="button"> create a post!</a>
        </div>
    </div>

    <% if (locals.articles) { %>

    <% articles.forEach((article)=> { %>
        <div class="border-bottom flex-column position-static mb-4">            
            <h2> <%= article.Title %> </h2>
                <p class=" card-text mb-auto">

                    <% var shortText = article.content %>
                    <% truncShortText = shortText.substring(0,200) %>
                    <%= truncShortText %>
                </p>
                <a type="button" class="btn btn-primary btn-sm" href="/post/<%= article.Title %>" role="button"> Read More</a>
    
        </div>

                <% }) %>
                
        
        <% } else { %>
            <div class="">
                 <p> this blog is empty, <a href="create">make a post</a></p>
            </div>
            <% } %>

</div>
<%- include("../partials/footer") %>